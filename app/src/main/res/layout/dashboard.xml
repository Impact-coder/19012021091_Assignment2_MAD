<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subconstraint1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/profile_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="25dp"

        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/outer_ring"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_twotone_circle_24"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_business_24"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Xenon Fashion"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#12143b"
            app:layout_constraintTop_toBottomOf="@id/outer_ring"/>

        <TextView
            android:id="@+id/business_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="193,Apple square yogichok Surat-394326"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#12143b"
            app:layout_constraintTop_toBottomOf="@id/business_title"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewrecord"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:textAllCaps="false"

        android:background="@drawable/btn_gradient"
        android:text="View Recoreds"
        android:textSize="25sp"
        android:textColor="#12143b"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_record_view_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subconstraint1"

        app:layout_constraintVertical_bias="0.17000002"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_invoice"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_gradient"
        android:text="Create Invoice"
        android:textSize="25sp"
        android:textColor="#12143b"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_outline_invoice_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewrecord"

        app:layout_constraintVertical_bias="0.17000002"/>




</androidx.constraintlayout.widget.ConstraintLayout>